{
  "name": "mp-weixin-skills",
  "displayName": "微信公众号文章发布工具",
  "description": "AI 直接生成带样式的 HTML 和封面，然后调用微信 API 发布到草稿箱",
  "version": "0.2.0",
  "author": "liangxp1990",
  "license": "MIT",
  "repository": "https://github.com/liangxp1990/mp-wechat-skills",
  "homepage": "https://github.com/liangxp1990/mp-wechat-skills",
  "keywords": [
    "wechat",
    "weixin",
    "mp",
    "article",
    "publish",
    "ai",
    "公众号",
    "文章发布",
    "automation"
  ],
  "cli": "mp-weixin",
  "install": "pip install mp-weixin-skills",
  "dependencies": [
    "Pillow>=10.0.0",
    "requests>=2.31.0",
    "python-dotenv>=1.0.0",
    "click>=8.1.0"
  ],
  "python": ">=3.10",
  "env": {
    "WECHAT_APP_ID": "微信 AppID",
    "WECHAT_APP_SECRET": "微信 AppSecret"
  },
  "config": {
    "OUTPUT_DIR": "./output",
    "THEME_COLOR": "#07c160",
    "LOG_LEVEL": "INFO"
  },
  "examples": [
    {
      "title": "发布文章（AI 驱动）",
      "prompt": "请将这篇文章发布到微信公众号草稿箱",
      "description": "AI 自动生成 HTML 和封面，然后发布到微信草稿箱"
    },
    {
      "title": "上传图片素材",
      "command": "mp-weixin upload-image cover.jpg",
      "description": "上传单张图片到微信素材库"
    },
    {
      "title": "批量上传图片",
      "command": "mp-weixin upload-images ./images",
      "description": "批量上传文件夹中的图片到微信素材库"
    }
  ],
  "features": [
    "✅ AI 直接生成带样式的 HTML",
    "✅ AI 自动生成封面图（1080×460）",
    "✅ 支持浏览器 MCP 搜索图片",
    "✅ 微信公众号 API 集成",
    "✅ 草稿创建和管理",
    "✅ 图片素材管理"
  ],
  "architecture": {
    "aiResponsibilities": [
      "文档转换（Markdown → HTML）",
      "样式应用（内联样式）",
      "封面生成（搜索图片 + PIL 加工）"
    ],
    "scriptResponsibilities": [
      "微信 API 操作",
      "素材上传",
      "草稿管理"
    ]
  }
}
